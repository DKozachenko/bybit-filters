{
  "manifest_version": 3,
  "name": "Bybit Filters",
  "version": "1.0.0",
  "description": "A simple extension with filters for bybit P2P page",
  "action": {
    "default_title": "Bybit Filters - manage P2P offers with some additional filters",
    "default_popup": "index.html#/popup",
    "default_icon": {
      "16": "bybit-logo.png",
      "32": "bybit-logo.png"
    }
  },
  "icons": {
    "16": "bybit-logo.png",
    "32": "bybit-logo.png",
    "48": "bybit-logo.png",
    "128": "bybit-logo.png"
  },
  "options_ui": {
    "page": "index.html#/options"
  },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://*.bybit.com/ru-RU/fiat/trade/otc/*"],
      "js": ["filter-offers.js"]
    }
  ]
}
